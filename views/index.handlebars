{{!-- * Create a button in `index.handlebars` that will submit the user input into the database. --}}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">

        <p>
          <img src="/burger/public/assets/img/b3.jpg" alt="burger">>
        </p>
      </div>
      <div class="row">
        <div class="col-md-6">
          <h2>Burgers Available!</h2>

          <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
              {{this.id}}
              {{this.burger_name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button class="btn-primary" type="submit">Devour It!</button>
              </form>

            </li>
            {{/unless}}
            {{/each}}
          </ul>

        </div>
        <div class="col-md-6">
          <h2>Burgers Eaten!</h2>

          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            {{this.id}}
            {{this.burger_name}}

          </li>
          {{/if}}
          {{/each}}

        </div>

      </div>
      <div class="col-md-4">
      </div>
      <div class="col-md-4">
        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <input type="text" id="burger" name="name">
          </div>
          <div class="form-group"></div>
          <center><label for="new_burger" class="red_font">Add a new burger </label></center>
          <textarea class="form-control" columns="8" rows="4" id="new_burger" name="burger_name"></textarea>
      </div>


      <button type="submit">Add a burger</button>
      </form>
      <div class="col-md-4">
      </div>
    </div>
  </div>
</div>
</div>